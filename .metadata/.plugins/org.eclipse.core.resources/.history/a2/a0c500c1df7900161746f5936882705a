package footbag;

public class Entity {
	private int x, y;
	private int width, height;
	private Map dots;
//	private float[] color;
	
	public Entity(int x, int y, int w, int h){
		this.x = x;
		this.y = y;
		width = w;
		height = h;
		dots = new Map(w,h);
		
		dots.putDot(0, h-1-0, new Dot((byte)1, 1f));
		dots.putDot(1, h-1-0, new Dot((byte)1, 1f));
		dots.putDot(0, h-1-1, new Dot((byte)1, 1f));
		dots.putDot(1, h-1-1, new Dot((byte)1, 1f));
		
	}
	
	
	public int getX(){
		return x;
	}
	
	public int getY(){
		return y;
	}
	
	public int getWidth(){
		return width;
	}
	
	public int getHeight(){
		return height;
	}
	
	public Map getMap(){
		return dots;
	}
	
	public void Move(int d){
		
		switch(d){

		case -6: y -= 2;
		break;
		
		case -3: y -= 1;
		break;
		
		case -1: x -= 1;
		break;
		
		case 1: x += 1;
		break;
		
		case 3: y += 1;
		break;
		
		}
	}
	
	
	public String toString(){
		
		return "(" + x + "," + y + ") w:" + width + " h:" + height;
	}
}
